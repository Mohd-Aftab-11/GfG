import java.util.*;

class Solution {
    int findWays(int n) {
        if (n % 2 != 0) return 0;
        
        int m = n / 2;
        int[] catalan = new int[m + 1];
        catalan[0] = 1;
        
        for (int i = 1; i <= m; i++) {
            catalan[i] = 0;
            for (int j = 0; j < i; j++) {
                catalan[i] += catalan[j] * catalan[i - 1 - j];
            }
        }
        
        return catalan[m];
    }
}
